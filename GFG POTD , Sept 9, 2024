Sort 0s, 1s and 2s



class Solution {
  public:
    void sort012(vector<int>& arr) {
        // code here
        int z=0, n=arr.size();
        
        for(int i=0;i<n;i++){
            if(arr[i]==0){
                swap(arr[z++],arr[i]);
            }
        }
        
        for(int i=z;i<n;i++){
            if(arr[i]==1){
                swap(arr[z++],arr[i]);
            }
        }
        
        
        
        
        
    }
